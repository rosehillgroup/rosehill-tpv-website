# Directory routes (without .html extension)
/es/ /index.html 200
/fr/ /index.html 200
/de/ /index.html 200

# Legacy English routes - redirect to root (no /en/ prefix needed)
/en/index.html /index.html 301!
/en/about.html /about.html 301!
/en/products.html /products.html 301!
/en/applications.html /applications.html 301!
/en/colour.html /colour.html 301!
/en/contact.html /contact.html 301!
/en/mixer.html /mixer.html 301!
/en/installations.html /installations.html 301!
/en/thank-you.html /thank-you.html 301!
/en/ / 301!

# Test page routes for development
/es/translation-test.html /translation-test.html 200
/fr/translation-test.html /translation-test.html 200
/de/translation-test.html /translation-test.html 200
/en/translation-test.html /translation-test.html 200

# Pretty URLs - redirect to canonical .html version
/about              /about.html             301!
/products           /products.html          301!
/applications       /applications.html      301!
/colour             /colour.html            301!
/contact            /contact.html           301!
/installations      /installations.html     301!
/login              /login.html             301!
/mixer              /mixer.html             301!

# Admin pages - protected by application-level authentication
# Keep admin pages accessible at root level (English only)
/installation-approval-hub.html   /installation-approval-hub.html   200!
/admin/add-installation.html       /admin/add-installation.html       200!

# Redirect www to non-www (update with your actual domain)
# https://www.yourdomain.com/* https://yourdomain.com/:splat 301!

# Force HTTPS
# http://yourdomain.com/* https://yourdomain.com/:splat 301!